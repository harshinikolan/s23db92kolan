extends layout

block content
  h1= title
  p Search result bird
  - let items = results
  
  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        - let destination = `/bird/update?id=${item._id}`
        div(class="row-sm-2", class="m-1") Item #{item.birdName}(#{item.birdPrice}) is #{item.birdColor}
        button.btn(class="btn-primary ml-1", onclick=`dispatch('${destination}')`) Update

  script.
    function dispatch(path){
      window.location.href = path;
    }